<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shiaj.hr.mapper.PostMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shiaj.hr.entity.Post">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="remark" property="remark"/>
        <result column="deleteFlag" property="deleteFlag"/>
    </resultMap>

    <select id="getPostById" resultType="com.shiaj.hr.entity.Post">
        SELECT
        post.id,
        post.name,
        post.remark,
        depart.name as parentDepart
        FROM post post
        LEFT JOIN depart depart ON post.departId = depart.id AND depart.deleteFlag = 0
        WHERE post.deleteFlag = 0 AND post.id = #{postId}
    </select>

    <select id="getAll" resultType="com.shiaj.hr.pojo.vo.PostVo">
        SELECT
        post.id,
        post.name,
        post.remark,
        depart.name as departName,
        depart.id as departId,
        post.deleteFlag
        FROM post
        LEFT JOIN depart ON post.departId = depart.id AND depart.deleteFlag = 0
        WHERE post.deleteFlag = 0
    </select>

    <select id="searchPost" resultType="com.shiaj.hr.pojo.vo.PostVo">
        SELECT
        post.id,
        post.name,
        post.remark,
        depart.name as departName,
        depart.id as departId,
        post.deleteFlag
        FROM post
        LEFT JOIN depart ON post.departId = depart.id AND depart.deleteFlag = 0
        WHERE post.deleteFlag = 0 AND post.name like concat('%',#{name},'%')

    </select>
</mapper>
